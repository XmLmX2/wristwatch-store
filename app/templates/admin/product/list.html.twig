{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.product.product_list' | trans }}{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>{{ 'Name' | trans }}</th>
                <th>{{ 'Price' | trans }}</th>
                <th>{{ 'Options' | trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} {{ product.currency.name }}</td>
                    <td>
                        <a href="{{ path('product', {'product': product.id}) }}" title="{{ 'admin.product.view_product' | trans }}"
                           class="btn btn-primary btn-sm"
                        >
                            {{ 'admin.product.view_product' | trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}