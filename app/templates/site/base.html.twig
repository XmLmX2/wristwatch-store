<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('media/img/favicon.ico') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">

        {% block stylesheets %}
            {{ encore_entry_link_tags('site') }}
        {% endblock %}

        {% include 'site/translation.html.twig' %}

        <script type="text/javascript">
            const WEBROOT = '/';
        </script>
    </head>
    <body>
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light shadow">
            <div class="container d-flex justify-content-between align-items-center">

                <a class="navbar-brand text-success logo h1 align-self-center fs-2" href="{{ path('home') }}">
                    Wristwatch Store
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between"
                     id="templatemo_main_nav"
                >
                    <div class="flex-fill">
                        <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('home') }}">{{ 'Home' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('about_us') }}">{{ 'About us' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('product_list') }}">{{ 'Products' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('contact') }}">{{ 'Contact' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar align-self-center d-flex">
                        <a class="nav-icon position-relative text-decoration-none" href="{{ path('shopping_cart') }}">
                            <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
                            <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"
                                  id="mini-shopping-cart-quantity"
                            >
                                {{ getShoppingCartProducts() | length }}
                            </span>
                        </a>
                    </div>
                </div>

            </div>
        </nav>
        <!-- Close Header -->

        <!-- Start Content -->
        {% block body %}{% endblock %}
        <!-- End Content -->

        <!-- Start Footer -->
        <footer class="bg-dark" id="tempaltemo_footer">
            <div class="container">
                <div class="row">

                    <div class="col-md-4 pt-5">
                        <h2 class="h2 text-success border-bottom pb-3 border-light logo fs-1">Wristwatch Store</h2>
                        <ul class="list-unstyled text-light footer-link-list">
                            <li>
                                <i class="fas fa-map-marker-alt fa-fw"></i>
                                123 Consectetur at ligula 10660
                            </li>
                            <li>
                                <i class="fa fa-phone fa-fw"></i>
                                <a class="text-decoration-none" href="tel:010-020-0340">010-020-0340</a>
                            </li>
                            <li>
                                <i class="fa fa-envelope fa-fw"></i>
                                <a class="text-decoration-none" href="mailto:info@wristwatch-store.com">
                                    info@wristwatch-store.com
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-4 pt-5">
                        <h2 class="h2 text-light border-bottom pb-3 border-light">{{ 'Brands' | trans }}</h2>
                        <ul class="list-unstyled text-light footer-link-list">
                            {% for brand in getBrands() %}
                                <li>
                                    <a class="text-decoration-none" href="{{ path('product_list', {
                                        'brand': brand.id
                                    }) }}">
                                        {{ brand.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="col-md-4 pt-5">
                        <h2 class="h2 text-light border-bottom pb-3 border-light">{{ 'Menu' | trans }}</h2>
                        <ul class="list-unstyled text-light footer-link-list">
                            <li>
                                <a class="text-decoration-none" href="{{ path('home') }}">
                                    {{ 'Home' | trans }}
                                </a>
                            </li>
                            <li>
                                <a class="text-decoration-none" href="{{ path('about_us') }}">
                                    {{ 'About us' | trans }}
                                </a>
                            </li>
                            <li>
                                <a class="text-decoration-none" href="{{ path('product_list') }}">
                                    {{ 'Products' | trans }}
                                </a>
                            </li>
                            <li>
                                <a class="text-decoration-none" href="{{ path('contact') }}">
                                    {{ 'Contact' | trans }}
                                </a>
                            </li>
                            <li>
                                <a class="text-decoration-none" href="{{ path('admin') }}">
                                    Admin
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>

                <div class="row text-light mb-4">
                    <div class="col-12 mb-3">
                        <div class="w-100 my-3 border-top border-light"></div>
                    </div>
                    <div class="col-auto me-auto">
                        <ul class="list-inline text-left footer-icons">
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank" href="http://facebook.com/">
                                    <i class="fab fa-facebook-f fa-lg fa-fw"></i>
                                </a>
                            </li>
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank"
                                   href="https://www.instagram.com/"
                                >
                                    <i class="fab fa-instagram fa-lg fa-fw"></i>
                                </a>
                            </li>
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank" href="https://twitter.com/">
                                    <i class="fab fa-twitter fa-lg fa-fw"></i>
                                </a>
                            </li>
                            <li class="list-inline-item border border-light rounded-circle text-center">
                                <a class="text-light text-decoration-none" target="_blank"
                                   href="https://www.linkedin.com/"
                                >
                                    <i class="fab fa-linkedin fa-lg fa-fw"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-auto">
                        <label class="sr-only" for="subscribeEmail">Email address</label>
                        <div class="input-group mb-2">
                            <input type="text" class="form-control bg-dark border-light" id="subscribeEmail"
                                   placeholder="Email address">
                            <div class="input-group-text btn-success text-light">Subscribe</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-100 bg-black py-3">
                <div class="container">
                    <div class="row pt-2">
                        <div class="col-12">
                            <p class="text-left text-light">
                                Copyright &copy; 2021 Wristwatch Store
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </footer>
        <!-- End Footer -->

        {% block javascripts %}
            {{ encore_entry_script_tags('site') }}
        {% endblock %}
    </body>
</html>
